generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Barbearia {
  id               String @id @default(uuid())
  nome             String
  email            String
  hash_senha       String
  nome_contato     String // Esse ser√° um campo para anotar o nome da pessoa a qual entraremos em contato
  telefone_contato String
}
