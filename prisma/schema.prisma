generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Barbershop {
  id            String @id @default(uuid())
  name          String
  email         String
  password_hash String
  contact_name  String
  contact_phone String
}
